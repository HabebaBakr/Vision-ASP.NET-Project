@model Book

<h1 class="alert alert-danger">Are you sure you want to delete this?</h1>

<partial name="_BookData" />

<form method="post" asp-controller="Books" asp-action="DeleteCurrent">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-controller="Books" asp-action="GetIndexView" class="btn btn-success mt-2 col-12 fw-bold">
    <i class="bi bi-arrow-left-circle"> Back to List</i>
</a>